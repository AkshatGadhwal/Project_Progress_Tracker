<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <com.bitvale.switcher.SwitcherX
            android:id="@+id/task_witcher"
            android:layout_width="12dp"
            android:layout_height="wrap_content"

            app:switcher_icon_color="@color/colorWhite"
            app:switcher_off_color="@color/colorAccent"
            app:switcher_on_color="@color/colorGreen" />

        <TextView
            android:id="@+id/tv_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:text="task name"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/plain_text"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <com.skydoves.progressview.ProgressView
            android:id="@+id/pv_task"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_gravity="end|center"
            android:layout_marginLeft="8dp"

            app:progressView_autoAnimate="true"
            app:progressView_colorBackground="@color/colorAccent"

            app:progressView_max="100"
            app:progressView_min="0"
            app:progressView_progress="50" />

        <TextView
            android:id="@+id/tv_task_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="98%"
            android:gravity="right"

            android:textColor="@color/colorAccent"
            android:textSize="@dimen/plain_text"

            />
    </LinearLayout>


</RelativeLayout>